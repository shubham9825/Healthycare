scalar GraphQLDate
 
type employeeDetails {
  id: Int!
  firstname: String!
  lastname: String! 
  dob: String!
  dateOfJoining: String!
  title: String!
  department: String!
  employeeType: String!
  currentStatus:Int
}

input employeeData {
  firstname: String!
  lastname: String! 
  dob: GraphQLDate!
  dateOfJoining: GraphQLDate!
  title: String!
  department: String!
  employeeType: String!
  currentStatus:Int
}

type Query {
  employeeList: [employeeDetails!]!
}

type Mutation {
  addEmployee(employee : employeeData!) : employeeDetails!,
}

 